{
    "name": "LightBlue Bean",
    "addBleWidget": true,
    "map": {
        "digital": {
            "pins": {
                "D0":  0,  "D1":  1,  "D2":  2,  "D3":  3, "D4": 4,
                "D5":  5
            },
            "ops": [ "dr", "dw" ]
        },
        "analog": {
            "pins": {
                "A0": 14, "A1": 15
            },
            "ops": [ "dr", "dw", "ar" ],
            "arRange": [ 0, 1023 ]
        },
        "pwm": {
            "pins": [
                "D0", "D1", "D2", "D3"
            ],
            "ops": [ "aw" ],
            "awRange": [ 0, 255 ]
        },
        "virtual":  {
            "pinsRange": [ 0, 31 ],
            "ops": [ "vr", "vw" ]
        }
    }
}
